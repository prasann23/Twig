<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bgr"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/hachi_maru_pop"
        android:padding="10dp"
        android:text="RegisteR"
        android:textColor="@color/reg"
        android:textSize="60dp" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="@dimen/tv_width"
        android:layout_height="@dimen/tv_height"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tf"
        android:ems="10"
        android:fontFamily="@font/roboto_thin"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="@dimen/pd"
        android:textColorHint="@color/dark" />

    <EditText
        android:id="@+id/email"
        android:layout_width="@dimen/tv_width"
        android:layout_height="@dimen/tv_height"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tf"
        android:ems="10"
        android:fontFamily="@font/roboto_thin"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:padding="@dimen/pd"
        android:textColorHint="@color/dark" />

    <EditText
        android:id="@+id/password"
        android:layout_width="@dimen/tv_width"
        android:layout_height="@dimen/tv_height"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tf"
        android:ems="10"
        android:fontFamily="@font/roboto_thin"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="@dimen/pd"
        android:textColorHint="@color/dark" />

    <EditText
        android:id="@+id/Phone"
        android:layout_width="@dimen/tv_width"
        android:layout_height="@dimen/tv_height"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tf"
        android:ems="10"
        android:fontFamily="@font/roboto_thin"
        android:hint="@string/phone"
        android:inputType="phone"
        android:padding="@dimen/pd"
        android:textColorHint="@color/dark" />

    <Button
        android:id="@+id/Register"
        android:layout_width="@dimen/bt_width"
        android:layout_height="@dimen/bt_height"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bt"
        android:fontFamily="@font/acme"
        android:text="Register"
        android:textColor="@color/light" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/Login1"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:text="Already Registered then login"
        android:textColor="@color/rex"
        android:textSize="20sp" />
</LinearLayout>